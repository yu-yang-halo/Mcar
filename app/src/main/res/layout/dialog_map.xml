<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:background="@drawable/dialog_border"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f6f6f6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/titleView"
                android:text="店铺全景"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text=""
                android:id="@+id/closeBtn"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/close0"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/contentView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout5"
            android:layout_toLeftOf="@+id/photoRotoa"
            android:layout_toStartOf="@+id/photoRotoa" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/photoRotoa"
            android:background="@drawable/rotoa"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/contentView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>

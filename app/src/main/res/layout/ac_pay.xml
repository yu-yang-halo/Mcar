<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:layout_marginTop="19dp"
        android:background="@color/white"
        android:id="@+id/couponRelayout"
        android:gravity="center_vertical"
        android:layout_below="@+id/relayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:id="@+id/imageView14"
            android:src="@drawable/arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠100"
            android:textSize="16sp"
            android:id="@+id/textView52"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView14"
            android:layout_toStartOf="@+id/imageView14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用优惠券"
            android:textSize="18sp"
            android:id="@+id/paytext"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <Button
        android:text="支付"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_order_shape_sel"
        android:textColor="@color/white"

        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:background="@color/white"
        android:id="@+id/relayout"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:id="@+id/imageView15"
            android:src="@drawable/arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15分钟"
            android:textSize="16sp"
            android:id="@+id/textView53"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView15"
            android:layout_toStartOf="@+id/imageView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择洗车时间"
            android:textSize="18sp"
            android:id="@+id/timetext"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>
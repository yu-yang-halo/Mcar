<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout6">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout6"
            android:layout_toLeftOf="@+id/button7"
            android:layout_toStartOf="@+id/button7">

            <TextView
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="left|center_vertical"
                android:id="@+id/titleNameTxt"
                android:text="title" />

        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/descImageView"
            android:background="@drawable/homepage_gridview_8"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/descTxt"
            android:gravity="left"
            android:text="desc"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_below="@+id/linearLayout6"
            android:layout_toRightOf="@+id/descImageView"
            android:layout_toEndOf="@+id/descImageView" />

        <Button
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="取消订单"
            android:id="@+id/delBtn"
            android:textColor="#a6ff0000"
            android:textSize="13sp"
            android:background="@drawable/btn_border_cancel_bgcolor"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="总价：222"
            android:id="@+id/priceTxt"
            android:layout_alignBottom="@+id/descImageView"
            android:layout_alignLeft="@+id/descTxt"
            android:layout_alignStart="@+id/descTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2012-09-08"
            android:textSize="12sp"
            android:id="@+id/createTimeTxt"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#56bc94"
            android:gravity="right|center_vertical"
            android:id="@+id/statusTxt"
            android:layout_centerVertical="true"
           android:layout_alignParentRight="true" />

        <Button
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="继续支付"
            android:id="@+id/button7"
            android:textColor="#a6ff0000"
            android:textSize="13sp"
            android:background="@drawable/btn_border_cancel_bgcolor"
            android:layout_alignTop="@+id/linearLayout6"
            android:layout_alignParentRight="true"
 />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/view_bgcolor"
    android:layout_marginTop="10dp"
    tools:showIn="@layout/fr_individual">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:src="@drawable/udesk_im_default_user_avatar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/accountName"
        android:textSize="25sp"
        android:layout_above="@+id/plateNumber"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/plateNumber"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/accountName"
        android:layout_alignStart="@+id/accountName" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#30000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout11">

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:id="@+id/layoutCoupon"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="优惠券"
                android:layout_marginTop="-5dp"
                android:id="@+id/textView15"
                android:layout_alignTop="@+id/imageView11"
                android:layout_alignLeft="@+id/textView48"
                android:layout_alignStart="@+id/textView48" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#a0ffffff"
                android:text="口令红包"
                android:layout_marginTop="7dp"
                android:id="@+id/textView48"
                android:layout_below="@+id/textView15"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:id="@+id/imageView11"
                android:background="@drawable/icon_personal_coupon"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView15"
                android:layout_toStartOf="@+id/textView15"
                android:layout_marginRight="17dp"
                android:layout_marginEnd="17dp" />
        </RelativeLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#40ffffff"
            android:orientation="horizontal"
            android:id="@+id/linearLayout7"></View>

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:id="@+id/layoutCar"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout7"
            android:layout_toEndOf="@+id/linearLayout7"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="我的车库"
                android:layout_marginTop="-5dp"
                android:id="@+id/textView49"
                android:layout_alignTop="@+id/imageView12"
                android:layout_alignLeft="@+id/textView50"
                android:layout_alignStart="@+id/textView50" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#a0ffffff"
                android:text="皖A PS999.."
                android:layout_marginTop="7dp"
                android:id="@+id/textView50"
                android:layout_below="@+id/textView49"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:id="@+id/imageView12"
                android:background="@drawable/icon_personal_car"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView49"
                android:layout_toStartOf="@+id/textView49"
                android:layout_marginRight="17dp"
                android:layout_marginEnd="17dp"  />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=""
        android:layout_marginTop="15dp"
        android:textColor="#c0ffffff"
        android:id="@+id/userNameText"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:text="退出应用"
        android:layout_marginBottom="15dp"
        android:textSize="13sp"
        android:textColor="@drawable/btn_exit_tcolor_selector"
        android:id="@+id/exitBtn"
        android:background="@drawable/btn_exit_bg"
        android:layout_above="@+id/relativeLayout11"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
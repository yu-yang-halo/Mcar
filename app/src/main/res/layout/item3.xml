<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"

        >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="9dp"
        android:textSize="@dimen/defaultFontSize"
        android:lines="1"
        android:ellipsize="end"
        android:text="店铺"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imageView13"
        android:layout_toStartOf="@+id/imageView13" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="地点"
        android:gravity="bottom"
        android:id="@+id/description"
        android:textColor="@color/gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/distanceText"
        android:layout_toStartOf="@+id/distanceText" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="150m"
            android:id="@+id/distanceText"
            android:gravity="right"
            android:textColor="@color/gray"
            android:layout_alignBottom="@+id/description"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:checked="true"
            android:layout_alignBottom="@+id/title"
            android:layout_alignRight="@+id/distanceText"
            android:layout_alignEnd="@+id/distanceText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="3dp"
            android:autoLink="email|phone|web"
            android:id="@+id/textPhone"
            android:layout_alignTop="@+id/title"
            android:layout_toRightOf="@+id/imageView13"
            android:layout_toEndOf="@+id/imageView13" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/imageView13"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_store_detail_phone"
            android:layout_alignTop="@+id/title"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/coupon_bg1"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="洗车券"
            android:id="@+id/couponNameTxt"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="有效期至2016-04-01"
            android:id="@+id/couponEndtimeTxt"
            android:layout_below="@+id/couponNameTxt"
            android:layout_alignLeft="@+id/couponNameTxt"
            android:layout_alignStart="@+id/couponNameTxt"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="9折"
            android:id="@+id/couponPriceDiscountTxt"
            android:layout_above="@+id/couponEndtimeTxt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Desc"
            android:id="@+id/couponDescTxt"
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/couponEndtimeTxt"
            android:layout_alignStart="@+id/couponEndtimeTxt" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:id="@+id/invailedImageView"
            android:background="@drawable/invailed"
            android:layout_toRightOf="@+id/couponEndtimeTxt"
            android:layout_marginLeft="-80dp"
            android:layout_alignParentTop="true"
         />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item name"
        android:id="@+id/itemName"
        android:textColor="@color/black_40"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/itemPrice"
        android:layout_toStartOf="@+id/itemPrice"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item price"
        android:id="@+id/itemPrice"
        android:textColor="@color/black_40"
        android:layout_alignTop="@+id/itemName"
        android:layout_toLeftOf="@+id/itemBtn"
        android:layout_toStartOf="@+id/itemBtn"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <Button
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:id="@+id/itemBtn"
        android:background="@mipmap/del"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <TextView
                            android:id="@+id/lb_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="开始时间"
                            android:layout_marginLeft="5dp"
                            android:textColor="#80888888" />

                        <TextView
                            android:id="@+id/lb_start_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/btn_start"
                            android:layout_toRightOf="@+id/lb_start"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="#1296db" />

                        <Button
                            android:id="@+id/btn_start"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_date"
                            android:textColor="#1296db"
                            android:layout_marginRight="5dp"
                            android:text="" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <TextView
                            android:id="@+id/lb_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:textColor="#80888888"
                            android:layout_marginLeft="5dp"
                            android:text="结束时间" />

                        <TextView
                            android:id="@+id/lb_end_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/btn_end"
                            android:layout_toRightOf="@+id/lb_end"
                            android:layout_marginRight="5dp"
                            android:text=""
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#1296db" />

                        <Button
                            android:id="@+id/btn_end"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_date"
                            android:textColor="#1296db"
                            android:layout_marginRight="5dp"
                            android:text="" />
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_weight="3">

                    <Button
                        android:id="@+id/queryBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_exit_bg2"
                        android:layout_weight="1"
                        android:textColor="#1296db"
                        android:text="查询" />
                </RelativeLayout>

            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lb_price"
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:lines="3"
                    android:text="" />
            </RelativeLayout>


        </LinearLayout>
</LinearLayout>
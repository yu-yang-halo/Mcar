<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/layout_bg_selector"
        android:layout_margin="1dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/goodImageView"
            android:layout_marginRight="2dp"
            android:src="@drawable/icon_default"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="保养套餐"
            android:lines="2"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:id="@+id/goodName"
            android:textSize="12sp"
            android:textColor="@color/font_gray0"
            android:layout_below="@+id/imageView17"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/goodPriceTxt"
            android:layout_alignRight="@+id/goodPriceTxt"
            android:layout_alignEnd="@+id/goodPriceTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:text="180"
            android:gravity="center"
            android:textColor="#ff0000"
            android:id="@+id/goodPriceTxt"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/goodImageView"
            android:layout_alignLeft="@+id/imageView17"
            android:layout_alignStart="@+id/imageView17" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView17"
            android:background="@drawable/hot"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#80cccccc"
        android:id="@+id/itemHeader">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="订单总金额："
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/textView55"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="100元"
            android:textColor="@color/red"
            android:id="@+id/textView56"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView55"
            android:layout_toEndOf="@+id/textView55" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#80000000"
            android:text=""
            android:padding="2dp"
            android:gravity="right"
            android:id="@+id/textView59"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView56"
            android:layout_toEndOf="@+id/textView56" />

    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/orderItem"
        android:layout_below="@+id/itemHeader"
        android:layout_above="@+id/itemFooter">

    </ListView>

    <RelativeLayout
        android:id="@+id/itemFooter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#80fefefe"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="取消订单"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:background="@drawable/btn_border_cancel_bgcolor"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="立即支付"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:background="@drawable/btn_border_cancel_bgcolor"
            android:id="@+id/button6"
            android:layout_alignTop="@+id/button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="47dp"
            android:layout_marginEnd="47dp" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/gImageView"
        android:padding="5dp"
        android:src="@drawable/icon_default"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:id="@+id/gDesc"
        android:ellipsize="end"
        android:layout_below="@+id/gImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:text="20元"
        android:id="@+id/gPrice"
        android:gravity="center_vertical"
        android:textColor="@color/red"
        android:layout_below="@+id/gDesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/gPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="数量"
            android:gravity="center"
            android:id="@+id/textView22"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:gravity="center"
            android:id="@+id/btnRemove"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView22"
            android:layout_toEndOf="@+id/textView22" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/gCount"
            android:textSize="30sp"
            android:gravity="center"
            android:inputType="number"
            android:layout_alignBottom="@+id/btnRemove"
            android:layout_toRightOf="@+id/btnRemove"
            android:layout_toEndOf="@+id/btnRemove" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="30sp"
            android:id="@+id/btnAdd"
            android:layout_alignBottom="@+id/gCount"
            android:layout_toRightOf="@+id/gCount"
            android:layout_toEndOf="@+id/gCount" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="加入购物车"
        android:id="@+id/btnAddCart"
        android:textColor="#ffffff"
        android:background="@drawable/button_cart_bgcolor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>